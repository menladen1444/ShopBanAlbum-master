<script>
function DeleteData(AlbumID) {
    if (confirm("Bạn chắc chắn muốn xóa Album này ...?")) {
        Delete(AlbumID);
    }
    else {
        return false;
    }
}

function Delete(AlbumID) {
var url = '@Url.Content("Album/DeleteAlbum")';
$.post(url, { ID: AlbumID }, function (data) {
        if (data == "Deleted") {
            alert("Xóa thành công!");
            oTable = $('#albumDataTable').DataTable();
            oTable.draw();
        }
        else {
            alert("Something Went Wrong!");
        }
    });
}
</script>
