<script>
function DeleteData(KhachHangID) {
    if (confirm("Bạn chắc chắn muốn xóa khách hàng này ...?")) {
        Delete(KhachHangID);
    }
    else {
        return false;
    }
}

    function Delete(KhachHangID) {
var url = '@Url.Content("KhachHang/DeleteKhachHang")';
        $.post(url, { ID: KhachHangID }, function (data) {
        if (data == "Deleted") {
            alert("Xóa thành công!");
            oTable = $('#khachHangDataTable').DataTable();
            oTable.draw();
        }
        else {
            alert("Something Went Wrong!");
        }
    });
}
</script>
