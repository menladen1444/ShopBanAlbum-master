
@{
    ViewBag.Title = "Index";
}

@section Scripts{
    <!-- Page level plugins -->
    <script src="/Assets/Admin/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="/Assets/Admin/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="/Assets/Admin/js/demo/datatables-demo.js"></script>
}
<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-flex justify-content-between pb-2">
        <h1 class="h3 mb-2 text-gray-800">Danh sách Nhân viên</h1>
        <div>
            <a type="submit" class="btn btn-success" href="@Url.Action("Create","NhanVien")">
                <i class="fas fa-plus"></i>
                <span>Thêm Nhân viên</span>
            </a>
        </div>
    </div>
    <!-- DataTales Example -->
    <div class="card shadow mb-4">

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="nhanVienDataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>NhanVienID</th>
                            <th>Tên nhân viên</th>
                            <th>Email</th>
                            <th>Mật khẩu</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>NhanVienID</th>
                            <th>Tên nhân viên</th>
                            <th>Email</th>
                            <th>Mật khẩu</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->
<script>
function DeleteData(NhanVienID) {
    if (confirm("Bạn chắc chắn muốn xóa nhân viên này ...?")) {
        Delete(NhanVienID);
    }
    else {
        return false;
    }
}

    function Delete(NhanVienID) {
var url = '@Url.Content("NhanVien/DeleteNhanVien")';
        $.post(url, { ID: NhanVienID }, function (data) {
        if (data == "Deleted") {
            alert("Xóa thành công!");
            oTable = $('#nhanVienDataTable').DataTable();
            oTable.draw();
        }
        else {
            alert("Something Went Wrong!");
        }
    });
}
</script>
