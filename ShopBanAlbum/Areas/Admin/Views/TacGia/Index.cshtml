
@{
    ViewBag.Title = "Index";
}
@section Scripts{
    <!-- Page level plugins -->
    <script src="/Assets/Admin/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="/Assets/Admin/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="/Assets/Admin/js/demo/datatables-demo.js"></script>
}
<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-flex justify-content-between pb-2">
        <h1 class="h3 mb-2 text-gray-800">Danh sách Tác giả</h1>
        <div>
            <a type="submit" class="btn btn-success" href="@Url.Action("Create","TacGia")">
                <i class="fas fa-plus"></i>
                <span>Thêm Tác giả</span>
            </a>
        </div>
    </div>
    <!-- DataTales Example -->
    <div class="card shadow mb-4">

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="tacGiaDataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>TacGiaID</th>
                            <th>Tên tác giả</th>
                            <th>Hình ảnh</th>
                            <th>Giới thiệu</th>
                            <th>Năm sinh</th>
                            <th>Nơi sinh</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>TacGiaID</th>
                            <th>Tên tác giả</th>
                            <th>Hình ảnh</th>
                            <th>Giới thiệu</th>
                            <th>Năm sinh</th>
                            <th>Nơi sinh</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->
<script>
function DeleteData(TacGiaID) {
    if (confirm("Bạn chắc chắn muốn xóa Tác giả này ...?")) {
        Delete(TacGiaID);
    }
    else {
        return false;
    }
}

    function Delete(TacGiaID) {
var url = '@Url.Content("/TacGia/DeleteTacGia")';
        $.post(url, { ID: TacGiaID }, function (data) {
        if (data == "Deleted") {
            alert("Xóa thành công!");
            oTable = $('#tacGiaDataTable').DataTable();
            oTable.draw();
        }
        else {
            alert("Something Went Wrong!");
        }
    });
}
</script>
