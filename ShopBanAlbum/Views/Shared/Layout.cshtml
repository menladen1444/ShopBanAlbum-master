<!DOCTYPE html>

<html style="height:100%">
<head>
    <title>@ViewBag.Title - THE ALBUM SHOP</title>
    <meta charset="utf-8" />
    <link rel="icon" href="~/Contents/images/icon.png" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="THE ALBUM SHOP - Cửa hàng Album lớn nhất tại Việt Nam được thành lập vào năm 2020 với mục đích phát triển và trở thành nhà bán lẻ Album lớn nhất thế giới, mua Album có xuất xứ từ nước ngoài của các tác giả nổi tiếng có giá từ 500000đ" />
    <meta name="keywords" content="the album shop, mua album, cua hang the album, mua, album" />
    <link href="~/Contents/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Contents/js/jquery-1.10.2.min.js"></script>
    <script src="~/Contents/js/jquery.sldr.js"></script>
    <link href="~/Contents/css/layout.css" rel="stylesheet" />
    <script src='https://kit.fontawesome.com/a076d05399.js'></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link href="https://fonts.googleapis.com/css2?family=Lobster&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Dancing+Script&family=Lobster&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Yanone+Kaffeesatz:wght@600&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Anton&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Balsamiq+Sans&display=swap" rel="stylesheet">
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.11.4/jquery-ui.min.js"></script>
    @RenderSection("head", false);
</head>
<body style="background-image: url('../Contents/images/background.jpg');background-size:cover;background-color:#2ea4ca;height:100%">
    <div class="container">
        <nav class="navbar-inverse">
            <div>
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="collapse navbar-collapse" id="myNavbar">
                    <ul class="nav navbar-nav">
                        <li class="menu"><a href='@Url.Action("Index", "Home")' style="color:white">Trang chủ</a></li>
                        <li class="menu"><a href='@Url.Action("SanPham", "Home",new {id = 1 })' style="color:white">Sản phẩm</a></li>

                        @Html.Action("DropdownDanhMuc", "QuocGias")
                        <li class="menu"><a href='@Url.Action("LienHe", "Home")' style="color:white">Liên hệ</a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            @if (Session["userName"] != null)
                            {
                                <ul class="navbar-nav" style="padding-top:15px">
                                    <li align="right" style="padding-right:10px">
                                        <a href='@Url.Action("ThongBao", "KhachHangs")'>
                                        <div class="notification">
                                            <svg viewBox="0 0 166 197">
                                                <path d="M82.8652955,196.898522 C97.8853137,196.898522 110.154225,184.733014 110.154225,169.792619 L55.4909279,169.792619 C55.4909279,184.733014 67.8452774,196.898522 82.8652955,196.898522 L82.8652955,196.898522 Z" class="notification--bellClapper"></path>
                                                <path d="M146.189736,135.093562 L146.189736,82.040478 C146.189736,52.1121695 125.723173,27.9861651 97.4598237,21.2550099 L97.4598237,14.4635396 C97.4598237,6.74321823 90.6498186,0 82.8530327,0 C75.0440643,0 68.2462416,6.74321823 68.2462416,14.4635396 L68.2462416,21.2550099 C39.9707102,27.9861651 19.5163297,52.1121695 19.5163297,82.040478 L19.5163297,135.093562 L0,154.418491 L0,164.080956 L165.706065,164.080956 L165.706065,154.418491 L146.189736,135.093562 Z" class="notification--bell"></path>
                                            </svg>
                                            <span class="notification--num"></span>
                                        </div>
                                        </a>
                                    </li>
                                    <li class="dropdown">
                                        <table style="background-color:rgba(0, 0, 0, 0.5);padding:5px;border-radius:20px;float:right">
                                            <tr>
                                                <th><span style="font-size:17px;font-family: 'Yanone Kaffeesatz', sans-serif;color:white;padding-left:15px">@Session["userName"]</span></th>
                                                <th>
                                                    <a class="dropdown-toggle" data-toggle="dropdown" href="#" style="color:white">
                                                        <img alt="image" src="~/Contents/images/account.png" style="height:28px;width:28px;margin-left:10px;box-shadow: 3px 3px 5px 6px rgba(0, 0, 0, 0.1);border-radius:50%;border:2px solid rgba(0, 0, 0, 0.3)">
                                                    </a>
                                                    <ul class="dropdown-menu" style="margin-top:10px;border-radius:10px">
                                                        <li class="danhmuc"><a class="link" href='@Url.Action("Details", "KhachHangs", new { id = @Session["KhachHangID"] })'><i class="fa fa-book" style="margin-right:10px"></i>Tài khoản</a></li>
                                                        <li class="danhmuc"><a class="link" href='@Url.Action("DangKy", "KhachHangs")'><i class="fas fa-registered" style="margin-right:10px"></i> Đăng ký</a></li>
                                                        <li class="danhmuc"><a class="link" href='@Url.Action("DangXuat", "KhachHangs")'><i class="fa fa-sign-out" style="margin-right:10px"></i> Đăng xuất</a></li>
                                                    </ul>
                                                </th>
                                            </tr>
                                        </table>

                                    </li>
                                </ul>


                            }
                            else
                            {
                                <button class="dangky" onclick="window.location.href='@Url.Action("DangKy", "KhachHangs")'">Đăng ký</button>
                                <button onclick="window.location.href='@Url.Action("DangNhap", "KhachHangs")'" style="margin-left:5px" class="dangnhap">Đăng nhập</button>
                            }

                        </li>
                    </ul>
                </div>
                <div class="row" style="margin-top:15px">
                    <div class="col-lg-3" style="padding-top:12px">
                        <a style="padding:0px" class="navbar-brand" href='@Url.Action("Index", "Home")'>
                            <span class="logo">
                                <i class="fa fa-heart" style="color:#ff6000"></i>
                            </span>
                            <span class="brand" style="padding-left:5px">ALBUM <span style="color:#dba443">SHOP</span></span>
                        </a>
                    </div>
                    <div class="col-lg-7" style="margin-bottom:10px">
                        @using (Html.BeginForm("Search", "Home", FormMethod.Get))
                        {
                            <div class="search">
                                <input autocomplete="off" id="search" class="search__input" name="search" type="text" placeholder="Search">
                            </div>
                        }
                    </div>
                    @Html.Action("BagCart", "Cart")
                </div>

            </div>
        </nav>
    </div>
    <div class="body">
        @RenderBody()
    </div>
    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="row">
                <hr style="border: 1px solid gray;margin:0 10px;">
                <div style="margin-top:20px"></div>
                <div class="col-lg-8" align="left">
                    <h4 style="color:white">THÔNG TIN LIÊN HỆ</h4>
                    <div>
                        <p style="margin:0;color:black">
                            Số điện thoại: <strong>01218699544</strong><br>
                            Email: <strong>moanashop@gmail.com</strong><br>
                            Địa chỉ: <strong>1000 - Xạ Thiên Đàn - Huyện Địa Ngục - Tĩnh Giấc Mơ.</strong>
                        </p>
                    </div>
                </div>
                <div class="col-lg-4" style="padding-top:30px" align="center">
                    <span class="brand" style="font-size:30px;background-color:rgba(0, 0, 0, 0.5);padding:5px 10px;color:whitesmoke;border-radius:10px">
                        THE ALBUM SHOP
                        <span style="padding:5px;background-color:rgba(0, 0, 0, 0.4)"><i class="fa fa-handshake-o" aria-hidden="true" style="color:greenyellow"></i></span>
                    </span>
                </div>
            </div>
        </div>
    </footer>

</body>
</html>
