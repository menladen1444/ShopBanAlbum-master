
@{
    ViewBag.Title = "ĐẶT HÀNG THÀNH CÔNG";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<style>
    body {
        margin: 0;
    }

    section {
        text-align: center;
    }

    .wrapper {
        height: 58vh;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>
<div class="wrapper" style="font-family: 'Coiny', cursive">
    <div class="container">
        <section class="message">
            <div style="margin:20px 0">
                <h2 class="m-4 text-success">Đặt hàng thành công!</h2>
                <h4 class="text-info">Bạn sẽ nhận được hàng trong vòng 2-4 ngày. Cảm ơn bạn đã mua hàng!</h4>
                <h4 align="center"><button class="gohome" onclick="window.location.href='@Url.Action("Index", "Home")'">Trở về trang chủ</button></h4>
            </div>
        </section>
    </div>
</div>

