@model ShopBanAlbum.Models.TacGia
@{
    ViewBag.Title = "NGHỆ SĨ";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div style="font-family: 'Coiny', cursive;padding:20px 0;background-image: linear-gradient(to right, #db951c, transparent);">
    <div class="container">
        <div class="row">
            <div class="col-lg-7">
                <h2 style="color:black">@Model.TenTacGia</h2>
                <h4 style="text-align:justify">@Model.GioiThieu</h4>
                <h4 style="color:#082934">Sinh năm @Model.NamSinh</h4>
                <h4 style="color:#082934">Nơi sinh @Model.NoiSinh</h4>
            </div>
            <div class="col-lg-5" style="padding:10px">
                <img alt="image" style="width:250px;border-radius:50%;box-shadow: 3px 3px 3px 3px rgba(0, 0, 0, 0.2)" src="~/Contents/images/Artist/@Model.HinhAnh" class="card-img-top">
            </div>
            
        </div>     
    </div>
</div>
<div class="container" style="margin-top:20px;padding-left:0;font-family: 'Coiny', cursive">
    <h2 style="color:#0f2e38;margin:20px 0;margin-left:10px">Danh sách album</h2>
    @foreach (var item in Model.Albums)
    {
        <div class="col-lg-2 col-xs-6" style="padding-right:0;padding-bottom:10px;margin-bottom:15px">
            <div style="padding:5px;padding-left:0">
                <div>
                    <a href='@Url.Action("ThongTinSanPham", "Home", new { id = item.AlbumID })'><img alt="image" style="border-radius:10px" src="~/Contents/images/album/@item.HinhAnh" class="card-img-top"></a>
                    <div align="center" style="padding-bottom:10px;margin-top:10px">
                        <p style="color:#fac91d;margin-bottom:0">@item.TenAlbum</p>
                        <p style="color:rgba(0, 0, 0, 0.5)">@item.TacGia.TenTacGia</p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
