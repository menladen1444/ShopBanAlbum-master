@model ShopBanAlbum.Models.BaiHatDetailAndListBaiHat
@{
    ViewBag.Title = "LỜI BÀI HÁT " + Model.baiHat.TenBaiHat;
    Layout = "~/Views/shared/Layout.cshtml";
}
<div class="container" style="font-family: 'Coiny', cursive">
    <h1 style="color:#061216">ALBUM <i style="margin:0 5px;margin-right:10px" class="fas fa-caret-right"></i><a href='@Url.Action("ThongTinSanPham", "Home", new { id = Model.baiHat.AlbumID })' style="color:#fac91d">@Model.baiHat.Album.TenAlbum</a></h1>
    <div class="row" style="background-color:#1c5a6e;padding:40px 60px;border-radius:20px">
        <div class="col-lg-8">
            <h2 style="color:#000000">LỜI BÀI HÁT <span style="color:#ecce65;font-size:35px">@Model.baiHat.TenBaiHat</span></h2>
            <h3 style="margin-top:0;margin-bottom:15px"><a style="color: #082934" href='@Url.Action("OneArtist", "Home", new { id = Model.baiHat.Album.TacGia.TacGiaID })'>@Model.baiHat.Album.TacGia.TenTacGia</a></h3>
            <p style="margin:0;color:#c6dfe7;font-size:22px;font-family: 'Yanone Kaffeesatz', sans-serif;">@Model.baiHat.LoiBaiHat</p>
        </div>
        <div class="col-lg-4">
            <h3 style="color:#000000;margin:20px 0">DANH SÁCH BÀI HÁT</h3>
            @foreach (var item in Model.ListBaiHat)
            {
                <a href='@Url.Action("LoiBaiHat", "Home", new { id = item.BaiHatID })' style="text-decoration:none">
                    <table class="linkBaiHat" width="100%">
                        <tr>
                            <th style="padding:15px 20px;color:#c3ad5e">@item.TenBaiHat</th>
                            <th style="width:10%;padding-right:20px;color:#6cafc5">@item.ThoiLuong</th>
                        </tr>
                    </table>
                </a>
            }
        </div>
        <div class="col-lg-12" style="margin-top:30px;padding-left:0">
            <h2 style="color:#000000;margin:20px 0;margin-left:10px">ALBUM GỢI Ý</h2>
            @foreach (var item in Model.albums)
            {
                <div class="col-lg-2 col-xs-6" style="padding-right:0;padding-bottom:10px;margin-bottom:15px">
                    <div style="padding:5px;padding-left:0">
                        <div>
                            <a href='@Url.Action("ThongTinSanPham", "Home", new { id = item.AlbumID })'><img alt="image" style="border-radius:10px" src="~/Contents/images/album/@item.HinhAnh" class="card-img-top"></a>
                            <div align="center" style="padding-bottom:10px;margin-top:10px">
                                <p style="color:#fac91d;margin-bottom:0">@item.TenAlbum</p>
                                <p style="color:rgba(0, 0, 0, 0.5)">@item.TacGia.TenTacGia</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>   